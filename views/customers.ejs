<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>This is the list of Customers</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <link rel="stylesheet" href="/css/customer.css">
    
    
</head>
<body>

    <div id="header">

        <h2> Here is the list of customers </h2>

    </div>


    <div id = "content">
	
        <table>
         
                    <tr>
                        
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Action</th>
                        
                    </tr>

                    <% for (let customer of customers) { %>

                        <% 
                        const query_str = qstring.encode(customer)
                        const customer_id = customer.id
                        let update_url = `/updatecustomer?${query_str}`
                        let delete_url = `/deletecustomer?cust_id=${customer_id}`
                        
                        %>

                        <tr>
					
                            <td><%= customer.first_name %></td>
                            <td><%= customer.last_name %></td>
                            <td><%= customer.email %></td>
                            
                            <td>
                                <a href=<%= update_url %>>Update</a>
            |
                                <a href=<%= delete_url %> onclick="if(!(confirm('Are you sure'))) return false">
                                Delete
                                </a>
                            </td>
                            
                        </tr>

                    <% } %>
                                                     
        </table>
        
        <br><br>
    
        <input type="button" value="Add Customer" 
        onclick="window.location.href='/addcustomer'; return False;"  
                 class="btn"/>
        
    </div>
    
</body>
</html>